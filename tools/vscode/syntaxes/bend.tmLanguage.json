{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Bend",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.bend",
          "match": "//.*$"
        },
        {
          "name": "comment.block.bend",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.bend",
          "match": "\\b(if|else|match|for|while|loop|break|continue|return|yield|async|await)\\b"
        },
        {
          "name": "keyword.other.bend",
          "match": "\\b(use|let|fn|struct|enum|trait|impl|mod|pub|priv|open|sealed)\\b"
        },
        {
          "name": "keyword.storage.bend",
          "match": "\\b(storage|contract|event|emit)\\b"
        },
        {
          "name": "keyword.constant.bend",
          "match": "\\b(true|false|none|some)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.bend",
          "match": "\\b(U8|U16|U32|U64|U128|I8|I16|I32|I64|I128|F32|F64|Bool|String|Bytes|Address|Token|Hash|List|Map|Set|Option|Result|Vec)\\b"
        },
        {
          "name": "support.type.bend",
          "match": "\\b(Self|self|usize|isize|u128|i128|f128)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.bend",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.bend",
          "match": "\\\\(\\\\|'|\\?|\\n|\\r|\\t|\\\"|[0-7]{1,3}|x[0-9A-Fa-f]{1,2}|u[0-9A-Fa-f]{4}|U[0-9A-Fa-f]{8})"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.bend",
          "match": "\\b(0x[0-9A-Fa-f]+|0o[0-7]+|0b[01]+|\\d+\\.\\d+(e[+-]?\\d+)?)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.bend",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*\\("
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.bend",
          "match": "(\\+|-|\\*|/|%|\\^|&|\\||!|<|>|=|@|#|$|~|\\?|::|->|=>|==|!=|<=|>=|&&|\\|\\|)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.bend",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.bend",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.bend"
}
